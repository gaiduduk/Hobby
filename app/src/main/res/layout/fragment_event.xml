<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/event_subscibe_layout">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView3" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="260dp"
                android:id="@+id/relativeLayout68"
                android:layout_below="@+id/event_small_owner_layout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:visibility="visible">

                <com.club.minsk.utils.FadeInNetworkImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/event_map_image"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:visibility="visible"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shadow_square"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="8dp"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_selector"
                        android:id="@+id/event_address_layout"
                        android:visibility="visible"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <RelativeLayout
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/relativeLayout59"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:visibility="visible"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="18:00"
                                android:id="@+id/event_time"
                                android:textSize="24dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="18 сен"
                                android:id="@+id/event_date"
                                android:layout_below="@+id/event_time"
                                android:layout_centerHorizontal="true"
                                android:textSize="18dp"
                                android:visibility="visible" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="1dp"
                            android:layout_height="60dp"
                            android:background="@color/gray_background"
                            android:id="@+id/relativeLayout65"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/relativeLayout59"
                            android:layout_toEndOf="@+id/relativeLayout59"
                            android:visibility="visible"></RelativeLayout>

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/imageView19"
                            android:background="@drawable/arrow_right"
                            android:backgroundTint="@color/gray_background"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="-8dp"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text=" ул. Фридриха Лихтенштейна д 12"
                            android:id="@+id/event_adress_text"
                            android:textColor="@android:color/black"
                            android:textSize="18dp"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/imageView19"
                            android:layout_toRightOf="@+id/relativeLayout65"
                            android:layout_toEndOf="@+id/relativeLayout65"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="15dp"
                            android:visibility="visible" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/shadow_top"
                    android:id="@+id/relativeLayout66"
                    android:visibility="visible"></RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/shadow_bottom"
                    android:visibility="visible"></RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/relativeLayout67"
                    android:visibility="visible"></RelativeLayout>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView20"
                    android:layout_above="@+id/relativeLayout67"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/picker"
                    android:visibility="visible" />

            </RelativeLayout>

            <com.club.minsk.utils.FadeInNetworkImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_image"
                android:visibility="visible"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/shadow_circle"
                android:layout_above="@+id/relativeLayout68"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-50dp"
                android:id="@+id/event_big_owner_layout"
                android:visibility="visible"
                android:foreground="@drawable/ripple_circle"
                android:clickable="true">

                <com.club.minsk.utils.CircularNetworkImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/event_big_owner_photo"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="8dp"
                    android:visibility="visible"
                    android:clickable="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/event_big_owner_name"
                    android:layout_alignBottom="@+id/event_big_owner_photo"
                    android:layout_centerHorizontal="true"
                    android:textSize="24dp"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="10dp"
                    android:shadowColor="@android:color/black"
                    android:shadowRadius="25"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/event_small_owner_layout"
                android:visibility="visible"
                android:background="@drawable/layout_selector"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="asd"
                    android:id="@+id/event_small_owner_comment"
                    android:visibility="visible"
                    android:layout_below="@+id/event_small_owner_name"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/event_small_owner_photo"
                    android:layout_toEndOf="@+id/event_small_owner_photo"
                    android:layout_marginBottom="10dp" />

                <com.club.minsk.utils.CircularNetworkImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/event_small_owner_photo"
                    android:visibility="visible"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Jane"
                    android:id="@+id/event_small_owner_name"
                    android:textColor="@android:color/black"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/event_small_owner_comment"
                    android:layout_alignStart="@+id/event_small_owner_comment"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20dp"
                    android:visibility="visible" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/shadow_top"
                    android:visibility="visible"></RelativeLayout>

            </RelativeLayout>

            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_update"
                android:layout_alignBottom="@+id/event_image"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/update"
                android:layout_margin="10dp"
                android:visibility="visible"
                app:fab_colorNormal="@android:color/transparent"
                app:fab_colorPressed="@color/transparent_white"
                app:fab_colorRipple="@android:color/white"
                app:fab_showShadow="false"
                app:fab_size="normal" />

            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_more"
                android:src="@drawable/more"
                android:tint="@android:color/white"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:visibility="visible"
                app:fab_colorNormal="@android:color/transparent"
                app:fab_colorPressed="@color/transparent_white"
                app:fab_colorRipple="@android:color/white"
                app:fab_showShadow="false"
                app:fab_size="normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/relativeLayout68"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Invited"
                    android:id="@+id/event_invite_text"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_invite_text"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/event_members_layout"
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp">

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_members_layout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/owner_chat_layout"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/shadow_square"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/layout_selector"
                            android:id="@+id/event_chat_button">

                            <RelativeLayout
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:background="@color/invite_chat"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:id="@+id/owner_chat_color">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:id="@+id/imageView27"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/message"
                                    android:tint="@android:color/white" />

                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Chat"
                                android:id="@+id/event_chat_title"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/owner_chat_color"
                                android:layout_toEndOf="@+id/owner_chat_color"
                                android:layout_marginLeft="16dp"
                                android:textSize="24dp"
                                android:textIsSelectable="false" />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/owner_chat_layout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/event_phone_layout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/shadow_square"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/layout_selector"
                            android:id="@+id/event_phone_button">

                            <RelativeLayout
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:background="@color/invite_phone"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:id="@+id/relativeLayout72" >

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:id="@+id/imageView26"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/phone"
                                    android:tint="@android:color/white" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/relativeLayout72"
                                android:layout_toEndOf="@+id/relativeLayout72"
                                android:layout_marginLeft="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="Jane Smitch"
                                    android:id="@+id/event_phone_owner_name"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:textSize="24dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="+3751********3"
                                    android:id="@+id/event_phone_number"
                                    android:layout_below="@+id/event_phone_owner_name"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:textIsSelectable="false"
                                    android:textSize="16dp" />
                            </RelativeLayout>

                        </RelativeLayout>
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_phone_layout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/event_uber_layout"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/shadow_square"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/layout_selector"
                            android:id="@+id/event_uber_button">

                            <RelativeLayout
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:background="@color/invite_uber"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:id="@+id/relativeLayout74" >

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:id="@+id/imageView28"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/uber"
                                    android:tint="@android:color/white" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Get uber"
                                android:id="@+id/event_uber_title"
                                android:layout_marginLeft="16dp"
                                android:textSize="24dp"
                                android:textIsSelectable="false"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/relativeLayout74"
                                android:layout_toEndOf="@+id/relativeLayout74" />

                        </RelativeLayout>
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_uber_layout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="push problem"
                        android:id="@+id/event_push_problem"
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp" />
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

    <com.github.clans.fab.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_menu"
        android:src="@drawable/menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:fab_colorNormal="@android:color/transparent"
        app:fab_colorPressed="@color/transparent_white"
        app:fab_colorRipple="@android:color/white"
        app:fab_showShadow="false"
        app:fab_size="normal"
        android:layout_margin="10dp"
        android:visibility="visible" />

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:animateLayoutChanges="true"
        android:layout_alignParentStart="true"
        android:id="@+id/event_subscibe_layout"
        android:background="@color/app_color"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Subscribe"
            android:id="@+id/event_subscibe_text"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="24dp"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/shadow_bottom"
        android:id="@+id/event_subscribe_shadow"
        android:layout_above="@+id/event_subscibe_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></RelativeLayout>
</RelativeLayout>