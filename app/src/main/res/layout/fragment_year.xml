<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout45">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="80+"
            android:id="@+id/year_count"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="76dp" />

        <SeekBar
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/year_seek"
            android:layout_below="@+id/year_count"
            android:layout_centerHorizontal="true"
            android:progress="62"
            android:progressTint="@color/app_color"
            android:thumb="@drawable/abc_btn_radio_to_on_mtrl_015"
            android:max="62"
            android:indeterminate="false" />
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/year_next_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:enabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Set years"
        android:id="@+id/year_text"
        android:layout_above="@+id/relativeLayout45"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" />
</RelativeLayout>